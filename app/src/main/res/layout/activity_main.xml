<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="395dp"
            android:layout_height="715dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp"
            android:background="@mipmap/hak">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:id="@+id/imageView" app:srcCompat="@mipmap/itz" android:background="#007FEFFD"/>
        <TextView
                android:text="Agung setya budi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="24sp"
                android:layout_marginLeft="130dp" android:layout_marginTop="10dp" android:textColor="#FFFFFF"/>
        <TextView
                android:text="Universitas Teknologi Yogyakarta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:textSize="24sp"
                android:layout_marginLeft="20dp" android:layout_marginTop="10dp" android:textColor="#FFFFFF"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_ins" android:layout_weight="1"
                    android:background="#E91E63" android:textSize="18sp" android:textColor="#FFFFFF"/>
            <Button
                    android:text="Facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_fb" android:layout_weight="1"
                    android:background="#01233F" android:textColor="#FFFFFF" android:textSize="18sp"/>
        </LinearLayout>
        <TextView
                android:text="MP3 PLAYER"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_marginLeft="130dp"
                android:layout_marginTop="25dp" android:textSize="24sp" android:textColor="#FFFFFF"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#00000000">
            <Button
                    android:text="Play"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_play" android:layout_weight="1"
                    android:background="#FFEB3B" android:textSize="18sp"/>
            <Button
                    android:text="Pause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_pause" android:layout_weight="1"
                    android:background="#FF9800" android:textSize="18sp"/>
            <Button
                    android:text="Stop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btn_stop" android:layout_weight="1"
                    android:background="#F44336" android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>